    <script>
        // ====================================================
        // MQTT CLIENT - GLOBAL VARIABLES
        // ====================================================
        let client = null;
        const TOPICS = {
            voltage: "vedha/energy/voltage",
            current: "vedha/energy/current",
            power: "vedha/energy/power",
            energy: "vedha/energy/energy",
            frequency: "vedha/energy/frequency",
            pf: "vedha/energy/pf",
            json: "vedha/energy/data"
        };

        // UI Elements
        const statusDot = document.getElementById("mqtt-dot");
        const statusText = document.getElementById("mqtt-status");
        const lastUpdateEl = document.getElementById("last-update");
        const alertBox = document.getElementById("alert-box");
        const alertMessage = document.getElementById("alert-message");
        const connectBtn = document.getElementById("connect-btn");

        // ====================================================
        // FUNCTIONS
        // ====================================================
        function showAlert(message) {
            alertMessage.textContent = message;
            alertBox.classList.add("show");
            setTimeout(() => {
                alertBox.classList.remove("show");
            }, 8000);
        }

        function updateStatus(status, message) {
            statusDot.className = "status-dot " + status;
            statusText.textContent = message;
        }

        function updateLastUpdate() {
            const now = new Date();
            lastUpdateEl.textContent = now.toLocaleTimeString();
        }

        function formatValue(value, decimals = 2) {
            const num = parseFloat(value);
            return isNaN(num) ? "--" : num.toFixed(decimals);
        }

        function connectToBroker() {
            const brokerUrl = document.getElementById("broker-url").value.trim();
            const username = document.getElementById("username").value.trim();
            const password = document.getElementById("password").value.trim();

            if (!brokerUrl) {
                showAlert("Please enter a broker URL");
                return;
            }

            // Disconnect existing connection
            if (client && client.connected) {
                client.end();
            }

            updateStatus("connecting", "Connecting...");
            connectBtn.disabled = true;
            connectBtn.textContent = "Connecting...";

            console.log("[MQTT] Connecting to:", brokerUrl);

            // Connection options
            const options = {
                clean: true,
                connectTimeout: 10000,
                reconnectPeriod: 5000,
            };

            // Add authentication if provided
            if (username) {
                options.username = username;
                options.password = password;
            }

            // Create MQTT client
            try {
                client = mqtt.connect(brokerUrl, options);
            } catch (error) {
                console.error("[MQTT] Connection error:", error);
                showAlert("Invalid broker URL format. Use: ws://IP:PORT or wss://IP:PORT");
                updateStatus("disconnected", "Connection Failed");
                connectBtn.disabled = false;
                connectBtn.textContent = "Connect to Broker";
                return;
            }

            // Connection successful
            client.on("connect", () => {
                console.log("‚úÖ [MQTT] Connected successfully");
                updateStatus("connected", "Connected");
                connectBtn.disabled = false;
                connectBtn.textContent = "Connected ‚úì";

                // Subscribe to all topics
                Object.values(TOPICS).forEach(topic => {
                    client.subscribe(topic, (err) => {
                        if (err) {
                            console.error("[MQTT] Subscribe error:", topic, err);
                        } else {
                            console.log("[MQTT] Subscribed to:", topic);
                        }
                    });
                });
            });

            // Handle incoming messages
            client.on("message", (topic, message) => {
                const value = message.toString();
                updateLastUpdate();

                switch(topic) {
                    case TOPICS.voltage:
                        document.getElementById("voltage").textContent = formatValue(value, 1);
                        break;
                    case TOPICS.current:
                        document.getElementById("current").textContent = formatValue(value, 3);
                        break;
                    case TOPICS.power:
                        document.getElementById("power").textContent = formatValue(value, 1);
                        break;
                    case TOPICS.energy:
                        document.getElementById("energy").textContent = formatValue(value, 3);
                        break;
                    case TOPICS.frequency:
                        document.getElementById("frequency").textContent = formatValue(value, 1);
                        break;
                    case TOPICS.pf:
                        document.getElementById("pf").textContent = formatValue(value, 2);
                        break;
                    case TOPICS.json:
                        // Could parse JSON and update all values at once
                        try {
                            const data = JSON.parse(value);
                            console.log("[MQTT] JSON data:", data);
                        } catch (e) {
                            console.warn("[MQTT] Invalid JSON:", value);
                        }
                        break;
                }
            });

            // Handle disconnection
            client.on("disconnect", () => {
                console.log("‚ö†Ô∏è [MQTT] Disconnected");
                updateStatus("disconnected", "Disconnected");
                connectBtn.disabled = false;
                connectBtn.textContent = "Reconnect";
            });

            // Handle reconnection attempts
            client.on("reconnect", () => {
                console.log("üîÑ [MQTT] Attempting to reconnect...");
                updateStatus("connecting", "Reconnecting...");
            });

            // Handle errors
            client.on("error", (err) => {
                console.error("‚ùå [MQTT] Error:", err);
                updateStatus("disconnected", "Error");
                connectBtn.disabled = false;
                connectBtn.textContent = "Connect to Broker";

                let errorMsg = "Connection failed. ";
                if (err.code === "ECONNREFUSED") {
                    errorMsg += "Broker refused connection. Check if WebSocket is enabled on port 9001.";
                } else if (err.code === "ETIMEDOUT") {
                    errorMsg += "Connection timed out. Check broker IP and firewall settings.";
                } else {
                    errorMsg += err.message || "Unknown error.";
                }
                
                showAlert(errorMsg);
            });

            // Handle connection closure
            client.on("close", () => {
                console.log("[MQTT] Connection closed");
            });
        }

        // ====================================================
        // AUTO-CONNECT ON PAGE LOAD
        // ====================================================
        window.addEventListener("load", () => {
            console.log("[Dashboard] Page loaded, auto-connecting to default broker...");
            // Auto-connect to default broker
            setTimeout(() => {
                connectToBroker();
            }, 500);
        });

        // Allow Enter key to connect
        document.addEventListener("keypress", (e) => {
            if (e.key === "Enter" && document.activeElement.tagName === "INPUT") {
                connectToBroker();
            }
        });
    </script>
</body>
</html>
